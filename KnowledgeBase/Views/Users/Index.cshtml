
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<KnowledgeBase.Models.User>

    <div class="card bg-light border mx-auto text-center">
        <div class="card-header">Users</div>
        <div class="card-body">
            <table class="table">
                <tr><th>Email</th><th></th></tr>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Email</td>

                        <td>
                            <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                <a class="btn btn-sm btn-secondary" asp-controller="Roles" asp-action="Edit" asp-route-userid="@user.Id">Roles</a>
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </table>
            <a class="btn btn-primary" asp-action="Create">Add new user</a>
        </div>

        

    </div>


        
