

@inject IViewLocalizer Localizer



<div class="modal fade" id="deleteUserConfirmation" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form asp-action="DeleteAccount" method="post">
                <div class="modal-header">
                    <h5 class="modal-title  ml-auto" id="exampleModalCenterTitle">@Localizer["DeleteUserConfirmationHeader"]</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>@Localizer["DeleteText"]</p>
                    <div asp-validation-summary="All"></div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text">@Localizer["PasswordLabel"]</label>
                        </div>
                        <input type="password" for="password" name="password" class="form-control" placeholder="">
                    </div>
                </div>
                <div class="modal-footer ">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">@Localizer["CancelDeleteButton"]</button>
                    <button class="btn btn-danger" type="submit">@Localizer["ConfirmDeleteButton"]</button>
                </div>
            </form>
        </div>
    </div>
</div>