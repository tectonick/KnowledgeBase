
@{
    ViewData["Title"] = "Register";
}

@model KnowledgeBase.ViewModels.RegisterViewModel

<div class="card bg-light border mx-auto text-center" style="max-width: 22rem;">
    <div class="card-header">Register new user</div>
    <div class="card-body">

        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="All"></div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" asp-for="Email"></label>
                </div>
                <input type="text" asp-for="Email" class="form-control" placeholder="">

            </div>
            @*<span asp-validation-for="Email"></span>*@
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" asp-for="Password"></label>
                </div>
                <input type="text" asp-for="Password" class="form-control" placeholder="">

            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" asp-for="PasswordConfirm"></label>
                </div>
                <input type="text" asp-for="PasswordConfirm" class="form-control" placeholder="">

            </div>
            @*<span asp-validation-for="Password"></span>*@
            <div>
                <button class="btn btn-primary mx-auto" type="submit">Register</button>
            </div>
        </form>

    </div>

</div>

