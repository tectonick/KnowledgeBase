@model List<Subject>
@{
    ViewData["Title"] = "Subjects";
}

<div class="text-center">
    <div class="row">

        <div class="col-sm-4 mb-3 mb-sm-0">

            <div class="card bg-light">
                <div class="card-header">Help</div>

                <div class="card-body">
                    <p>Lorem ipsum</p>
                </div>
                <a class="btn btn-primary btn-sm" asp-controller="Subjects" asp-action="CreateSubject">Create subject</a>
            </div>

        </div>

        <div class="col-sm-8">
            <div class="card bg-light">
                <div class="card-header">Your subjects</div>

                <div class="card-columns p-3">
                    @foreach (var subject in Model)
                    {

                        <div class="card bg-light" style="max-width: 22rem;">
                            <div class="card-header bg-light text-dark">@subject.Name</div>
                            <div class="card-body">

                                Topics :
                                @if (subject.Topics == null)
                                {
                                    <i>No topics</i>
                                }
                                else
                                {
                                    @foreach (var topic in subject.Topics)
                                    {
                                        <i>'@topic.Name' </i>
                                    }
                                }
                                <br />
                            </div>
                            <div class="btn-group mb-3">

                                <a class="btn btn-secondary btn-sm" asp-controller="Subjects" asp-action="Subject" asp-route-subjectId="@subject.Id">Details</a>
                              

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>







    </div>
</div>


