@model Topic
@{
    ViewData["Title"] = "Topic";
}

<!-- Delete topic confirmation -->
<div class="modal fade" id="deleteTopicConfirmation" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title  ml-auto" id="exampleModalCenterTitle">Delete confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you want to delete @Model.Name? This action cannot be undone!
            </div>
            <div class="modal-footer ">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <form asp-action="DeleteTopic" method="post" asp-route-topicId="@Model.Id">
                    <button class="btn btn-danger" type="submit">Delete topic</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="text-center">
    <form method="post" id="save-theme">



        <div class="row">

            <div class="col-sm-4 mb-3 mb-sm-0">
                <div class="card bg-light big-card">
                    <div class="card-header detail">Topic</div>
                    <div class="card-body">
                        <div class="validation" asp-validation-summary="All"></div>
                        <input type="hidden" asp-for="Id">
                        <input type="hidden" asp-for="SubjectId">
                        <input type="hidden" asp-for="UserId">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" asp-for="Name"></label>
                            </div>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Topic name">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" asp-for="Description"></label>
                            </div>
                            <input type="text" asp-for="Description" class="form-control" placeholder="Provide some description">
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" asp-for="DateLearned"></label>
                            </div>
                            <input type="datetime-local" asp-for="DateLearned" class="form-control">
                        </div>
                        @if (Model.RepeatDates.Count > 0)
                        {
                            @for (int i = 0; i < Model.RepeatDates.Count; i++)
                            {
                                <div class="input-group mb-3 repeat-date repeat-date-deletable" id="@i">
                                    <div class="input-group-prepend">
                                        @*<label class="input-group-text" asp-for="RepeatDates[i].Date"></label>*@
                                        <div class="input-group-text">
                                            <input type="checkbox" asp-for="RepeatDates[i].Repeated" />
                                        </div>
                                    </div>
                                    <input type="datetime-local" asp-for="RepeatDates[i].Date" class="form-control">
                                    <input type="hidden" asp-for="RepeatDates[i].Id">

                                    <div class="input-group-append delete-date-button">
                                        <span class="input-group-text"><i class="fas fa-trash"></i></span>
                                    </div>
                                </div>
                            }
                            <span class="add-repeat-date"><i class="fas fa-plus"></i></span>
                        }
                        else
                        {
                            <a class="btn btn-secondary" asp-action="AddRepeat" asp-route-subjectId="@Model.SubjectId" asp-route-topicId="@Model.Id">Add repeat dates</a>
                        }
                        <br /><br />
                    </div>
                    <div class="btn-group">
                        <button class="btn btn-primary" type="submit">Save changes</button>
                        <a class="btn btn-secondary" href="javascript: history.go(-1)">Back</a>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteTopicConfirmation">Delete topic</button>
                    </div>
                </div>
            </div>

            <div class="col-sm-8">
                <div class="card bg-light border">
                    <div class="card-header">Notes</div>
                    <textarea id="mytextarea" class="bg-light" asp-for="Notes">Here you can type some notes</textarea>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/tinymce.js"></script>

    <script>
       //ASP.NET includes hidden input with false value at the end of the form for every checkbox (because browser dont POST unchecked checkboxes).
        //This function needs to be called before any add date or delete date action to clear hidden inputs.
        //They will be recreated by renumerateForm()
        function clearHiddenInputsForCheckboxes() {
            $(".repeat-date").each(function () {
                $("input[type='hidden']", "form").last().remove();
            });
        }

        function renumerateForm() {
            var newId = 0;

            

            $(".repeat-date").each(function () {
                var oldId = Number($(this).attr("id"));
                $(this).attr("id", newId);


                var oldData = $("input[type='checkbox']", this).attr("id");
                $("input[type='checkbox']", this).attr("id", oldData.replace(oldId, newId));
                var oldData = $("input[type='checkbox']", this).attr("name");
                $("input[type='checkbox']", this).attr("name", oldData.replace(oldId, newId));

                
                $("form").append(`<input type='hidden' name='${oldData.replace(oldId, newId)}' value='false'/>`);
                //var oldData = $("input[type='hidden']","form").last().attr("id");
                //$("input[type='hidden']", "form").last().attr("id", oldData.replace(oldId, newId));
                //var oldData = $("input[type='hidden']").last().attr("name");
                //$("input[type='hidden']", "form").last().attr("name", oldData.replace(oldId, newId));


                oldData = $("input[type='datetime-local']", this).attr("name");
                $("input[type='datetime-local']", this).attr("name", oldData.replace(oldId, newId));

                oldData = $("input[type='hidden']", this).attr("name");
                $("input[type='hidden']", this).attr("name", oldData.replace(oldId, newId));

                oldData = $("input[type='datetime-local']", this).attr("id");
                $("input[type='datetime-local']", this).attr("id", oldData.replace(oldId, newId));

                oldData = $("input[type='hidden']", this).attr("id");
                $("input[type='hidden']", this).attr("id", oldData.replace(oldId, newId));
                newId++;
            });
        }

        function addDeleteEvent(elem) {
            $(".delete-date-button", elem).click(function () {
                clearHiddenInputsForCheckboxes();
                $(elem).remove();
                renumerateForm();
            });
        }

        $("document").ready(function () {
            $(".add-repeat-date").click(function () {
                clearHiddenInputsForCheckboxes();
                var elem = $(".repeat-date").last().clone();

                $("input[type='checkbox']", elem).removeAttr("checked");
                $("input[type='checkbox']", elem).attr("data-val", "false");
                $("input[type='checkbox']", elem).attr("value", "false");

                $("input[type='hidden']", elem).attr("value", "0");
                addDeleteEvent(elem);
                $(this).before(elem);
                renumerateForm();
            });

            $(".repeat-date").each(function () {
                addDeleteEvent(this);
            })

        });
    </script>
}

