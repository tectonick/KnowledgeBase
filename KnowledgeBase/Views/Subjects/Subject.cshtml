@model Subject
@{
    ViewData["Title"] = "Details";
}

<div class="text-center">
    <div class="row">
        <div class="col-sm-8 ">
            <div class="card bg-light">
                <div class="card-header">@Model.Name Topics</div>
                <div class="card-columns p-3">
                    @if ((Model.Topics == null) || (Model.Topics.Count == 0))
                    {
                        <br />
                        <i>You haven`t added any topics</i>
                    }
                    else
                    {
                        @foreach (var topic in Model.Topics)
                        {
                            <div class="card bg-light" style="max-width: 22rem;">
                                <div class="card-header bg-light text-dark">@topic.Name</div>
                                <div class="card-body">

                                    <p>DateLearned: @topic.DateLearned </p>
                                    @if (topic.NextRepeat != DateTime.MinValue)
                                    {
                                        <p>NextRepeat: @topic.NextRepeat</p>
                                    }
                                    <p>TimesRepeated: @topic.TimesRepeated</p>
                                    @if (@topic.Description != null)
                                    {
                                        <p>Description: @topic.Description</p>
                                    }
                                </div>

                                <div class="btn-group mb-3">


                                    <a class="btn btn-secondary btn-sm" asp-controller="Subjects" asp-action="Topic" asp-route-topicId="@topic.Id">Detail</a>
                                    <a class="btn btn-danger btn-sm delete-card-button" asp-controller="Subjects" asp-action="DeleteTopic" asp-route-topicId="@topic.Id">Delete</a>

                                </div>

                            </div>
                        }

                    }
                </div>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="card bg-light">
                    @*<h3 class="card-title">@Model.Name</h3>*@
                    <div class="card-header detail">Subject properties</div>
                    <form class="m-2" asp-controller="Subjects" asp-action="EditSubject" asp-route-subjectId="@Model.Id" method="post">
                        <div class="card-body">

                            <div class="validation" asp-validation-summary="All"></div>
                            <input type="hidden" asp-for="Id" class="form-control" placeholder="Subject name..">
                            <input type="hidden" asp-for="UserId">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    @*<button class="btn btn-primary" type="submit">Save name</button>*@
                                    <label class="input-group-text" asp-for="Name"></label>
                                </div>
                                <input type="text" asp-for="Name" class="form-control" placeholder="Subject name..">
                            </div>
                            <p>Lorem ipsum</p>
                            <a class="btn btn-info" type="submit" asp-controller="Subjects" asp-action="CreateTopic" asp-route-subjectId="@Model.Id">Create topic</a>
                        </div>

                        <div class="btn-group">
                            <button class="btn btn-primary" type="submit">Save</button>
                            <button class="btn btn-secondary" type="submit" asp-controller="Subjects" asp-action="Index">Back</button>
                            <a class="btn btn-danger delete-detail-button" asp-controller="Subjects" asp-action="DeleteSubject" asp-route-subjectId="@Model.Id">Delete subject</a>
                        </div>
                    </form>

                </div>

            </div>
        </div>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/DeleteCardConfirm.js"></script>

    <script>
        $("document").ready(function () {
          
            $(".delete-detail-button").click(function (e) {
                e.preventDefault();
                this.innerHTML = "Confirm delete";
                $(this).removeClass("btn-danger");
                $(this).css("background-color", "#ff0000");
                $(this).css("color", "#ffffff");
                $(".detail").css("background-color", "#ff0000");

                $(this).unbind('click');

            })
        });

    </script>

}
